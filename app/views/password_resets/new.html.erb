<% provide(:title, "パスワードをお忘れですか") %>
<h1><font color="#0101DF">パスワードをお忘れですか</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: 'form-control' %></font>

      <%= f.submit "送信", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>