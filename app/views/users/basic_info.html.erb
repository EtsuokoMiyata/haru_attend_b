<% provide(:title, "基本情報の更新") %>
<h1><font color="#0101DF">基本情報の更新</h1>

<div class="row">
  

  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :指定勤務時間 %>
      <%= f.text_field :fixed_work_time, class: 'form-control' %>

      <%= f.label :基本勤務時間 %>
      <%= f.email_field :basic_work_time, class: 'form-control' %>

      <%= f.submit "編集", class: "btn btn-primary" %>
    <% end %></font>
  </div>
</div>