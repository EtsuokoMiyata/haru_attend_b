<!-- これより勤怠表示画面の　1か月分カレンダー始まり -->
<% require 'date' %>
<% @arrey.each do |date| %>
  <tr>
    <td><%= date.strftime("%-m/%-d") %></th>
        <% wd = ["日", "月", "火", "水", "木", "金", "土"] %>
    <td><%= date.strftime("#{wd[date.wday]}") %></th>
    <td></td>
    <td></td>
    <td>
      <!-- 本日の欄に出社ボタン表示　-->
      <% if date == Date.today %>
        <!-- button type="button" class="btn btn-default" -->出社<!-- /button --><!-- /td -->
        <%= link_to '出社', attendances_path(id: @user.id, button_name: 'in_office'), method: :post, class: "btn btn-default" %></td>
      <% else %>
      <% end %>
      
      
    <td></td>
    <td></td>
    <td>
      <!-- 本日の欄に退社ボタン表示　-->
      <% if date == Date.today %>
        <button type="button" class="btn btn-default">退社</button></td>
      <% else %>
      <% end %>
      
      
    <td></td>
    <td></td>
  </tr>
<% end %>
